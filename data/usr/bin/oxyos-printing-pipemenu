#!/bin/bash
# ---------------------------------------------------------------------
# An Openbox pipemenu for configuring printing under OxyOS.
# Written for OxyOS <https://os.oxy.so/>
# Originally by Philip Newborough (aka corenominal) <mail@philipnewborough.co.uk>
# ---------------------------------------------------------------------

if ! . oxyos-include.cfg 2> /dev/null; then
    echo '  Failed to locate oxyos-include.cfg in PATH' >&2
    exit 1
fi

if [[ $1 = '--install' ]]; then
    terminator --title='Install Printer Support' --command='oxyos-printing-pipemenu --install-printing'

elif [[ $1 = '--install-printing' ]]; then
    promptInstall 'PRINTING SUPPORT' 'printing support' 'oxyos-meta-printer-support'

else
    # Pipemenu
    menuStart
    if type 'system-config-printer' &> /dev/null; then
        menuItem 'Configure Printers' 'oxyos-gksudo system-config-printer'
    else
        menuItem 'Install Printing Support' 'oxyos-printing-pipemenu --install'
    fi
    menuEnd
fi
exit 0
